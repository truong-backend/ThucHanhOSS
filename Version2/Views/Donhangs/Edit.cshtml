@model Version2.Models.Donhang

@{
	ViewData["Title"] = "Edit";
}

<div class="p-6 bg-white rounded shadow-lg">
	<h1 class="text-2xl font-bold text-gray-800 mb-4">Edit</h1>

	<h4 class="text-lg font-semibold text-gray-800">Donhang</h4>
	<hr class="border-gray-300 my-2" />

	<div class="max-w-lg mx-auto">
		<form asp-action="Edit" class="space-y-6">
			<div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>
			<input type="hidden" asp-for="IddonHang" />

			<div class="form-group">
				<label asp-for="IdphieuDatHang" class="block text-sm font-medium text-gray-700">Mã Phiếu Đặt Hàng</label>
				<select asp-for="IdphieuDatHang" class="form-select block w-full mt-1 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
					<option value="">Chọn Mã Phiếu</option>
					@* ViewBag.IdphieuDatHang sẽ chứa các tùy chọn *@
					@foreach (var item in ViewData["IdphieuDatHang"] as SelectList)
					{
						<option value="@item.Value">@item.Text</option>
					}
				</select>
			</div>

			<div class="form-group">
				<label asp-for="IdnguoiGiaoHang" class="block text-sm font-medium text-gray-700">Người Giao Hàng</label>
				<select asp-for="IdnguoiGiaoHang" class="form-select block w-full mt-1 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
					<option value="">Chọn Người Giao Hàng</option>
					@foreach (var item in ViewData["IdnguoiGiaoHang"] as SelectList)
					{
						<option value="@item.Value">@item.Text</option>
					}
				</select>
			</div>

			<div class="flex flex-col">
				<label asp-for="NgayGiaoHang" class="text-gray-700 font-medium mb-1"></label>
				<input asp-for="NgayGiaoHang" type="date" class="border-gray-300 rounded p-2 focus:ring-blue-500 focus:border-blue-500" />
				<span asp-validation-for="NgayGiaoHang" class="text-red-500 text-sm"></span>
			</div>

			<div class="form-group">
				<label asp-for="TrangThai" class="block text-sm font-medium text-gray-700">Trạng Thái</label>
				<select asp-for="TrangThai" class="form-select block w-full mt-1 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
					<option value="Đang Giao">Đang Giao</option>
					<option value="Hoàn Thành">Hoàn Thành</option>
					<option value="Hủy">Hủy</option>
				</select>
			</div>

			<div class="flex flex-col">
				<label asp-for="GhiChu" class="text-gray-700 font-medium mb-1"></label>
				<input asp-for="GhiChu" type="text" class="border-gray-300 rounded p-2 focus:ring-blue-500 focus:border-blue-500" />
				<span asp-validation-for="GhiChu" class="text-red-500 text-sm"></span>
			</div>

			<div class="flex space-x-4">
				<button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">
					Save
				</button>
				<a asp-action="Index" class="px-4 py-2 bg-gray-300 text-gray-800 rounded hover:bg-gray-400 transition">
					Back to List
				</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
