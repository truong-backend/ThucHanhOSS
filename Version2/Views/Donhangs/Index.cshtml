@model IEnumerable<Version2.Models.Donhang>

@{
    ViewData["Title"] = "Index";
}
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">


<div class="container mx-auto p-6">
    <h1 class="text-4xl font-bold text-center text-gray-800 mb-8">Danh sách Đơn Hàng</h1>

    <div class="flex justify-between items-center mb-6">
        <a href="@Url.Action("Create", "DonHangs")" class="px-4 py-2 bg-blue-600 text-white text-sm font-semibold rounded-lg shadow-md hover:bg-blue-700">
            <i class="bi bi-plus-circle"></i> Thêm mới
        </a>
    </div>

    <div class="overflow-hidden shadow rounded-lg">
        <table class="min-w-full table-auto bg-white border-collapse border border-gray-200">
            <thead class="bg-gray-800 text-white">
                <tr>
                    <th class="px-4 py-2 text-left text-sm font-medium">Ngày Giao Hàng</th>
                    <th class="px-4 py-2 text-left text-sm font-medium">Trạng Thái</th>
                    <th class="px-4 py-2 text-left text-sm font-medium">Ghi Chú</th>
                    <th class="px-4 py-2 text-left text-sm font-medium">Người Giao Hàng</th>
                    <th class="px-4 py-2 text-left text-sm font-medium">Phiếu Đặt Hàng</th>
                    <th class="px-4 py-2 text-center text-sm font-medium">Thao Tác</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-100">
                        <td class="px-4 py-2 text-sm text-gray-700">@item.NgayGiaoHang</td>
                            <td class="px-4 py-2 text-sm text-gray-700">@item.TrangThai</td>
                            <td class="px-4 py-2 text-sm text-gray-700">@item.GhiChu</td>
                            <td class="px-4 py-2 text-sm text-gray-700">@item.IdnguoiGiaoHangNavigation.TenNguoiGiaoHang</td>
                            <td class="px-4 py-2 text-sm text-gray-700">@item.IdphieuDatHangNavigation.IdphieuDatHang</td>
                            <td class="px-4 py-2 text-center">
                                <a href="@Url.Action("Edit","Donhangs",new {id = item.IddonHang})" class="inline-block px-3 py-1 bg-yellow-500 text-white text-xs font-medium rounded hover:bg-yellow-600">
                                    <i class="bi bi-pencil-square"></i> Sửa
                                </a>
                                <a href="@Url.Action("Details","Donhangs", new {id = item.IddonHang})" class="inline-block px-3 py-1 bg-blue-500 text-white text-xs font-medium rounded hover:bg-blue-600">
                                    <i class="bi bi-eye"></i> Xem
                                </a>
                            <a href="@Url.Action("Delete", "DonHangs", new{id = item.IddonHang})" class="inline-block px-3 py-1 bg-red-500 text-white text-xs font-medium rounded hover:bg-red-600">
                                    <i class="bi bi-trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>

