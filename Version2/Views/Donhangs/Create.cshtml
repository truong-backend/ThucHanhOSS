@model Version2.Models.Donhang

@{
    ViewData["Title"] = "Create";
}
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mx-auto p-6">
    <h1 class="text-4xl font-bold text-center text-gray-800 mb-6">Tạo Mới Đơn Hàng</h1>

    <h4 class="text-xl font-semibold text-gray-700 mb-4">Thông Tin Đơn Hàng</h4>
    <hr class="mb-6">

    <div class="max-w-3xl mx-auto">
        <form asp-action="Create" class="space-y-6">
            <div class="text-red-500">
                <div asp-validation-summary="ModelOnly"></div>
            </div>

            <!-- IdphieuDatHang -->
            <div class="form-group">
                <label asp-for="IdphieuDatHang" class="block text-sm font-medium text-gray-700">Mã Phiếu Đặt Hàng</label>
                <select asp-for="IdphieuDatHang" class="form-select block w-full mt-1 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                    <option value="">Chọn Mã Phiếu</option>
                    @* ViewBag.IdphieuDatHang sẽ chứa các tùy chọn *@
                    @foreach (var item in ViewData["IdphieuDatHang"] as SelectList)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>

            <!-- IdnguoiGiaoHang -->
            <div class="form-group">
                <label asp-for="IdnguoiGiaoHang" class="block text-sm font-medium text-gray-700">Người Giao Hàng</label>
                <select asp-for="IdnguoiGiaoHang" class="form-select block w-full mt-1 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                    <option value="">Chọn Người Giao Hàng</option>
                    @foreach (var item in ViewData["IdnguoiGiaoHang"] as SelectList)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>

            <!-- NgayGiaoHang -->
            <div class="form-group">
                <label asp-for="NgayGiaoHang" class="block text-sm font-medium text-gray-700">Ngày Giao Hàng</label>
                <input asp-for="NgayGiaoHang" type="date" class="form-input block w-full mt-1 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="NgayGiaoHang" class="text-red-500"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrangThai" class="block text-sm font-medium text-gray-700">Trạng Thái</label>
                <select asp-for="TrangThai" class="form-select block w-full mt-1 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                    <option value="Đang Giao">Đang Giao</option>
                    <option value="Hoàn Thành">Hoàn Thành</option>
                    <option value="Hủy">Hủy</option>
                </select>
            </div>
            <!-- GhiChu -->
            <div class="form-group">
                <label asp-for="GhiChu" class="block text-sm font-medium text-gray-700">Ghi Chú</label>
                <input asp-for="GhiChu" class="form-input block w-full mt-1 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" style="padding:10px" />
                <span asp-validation-for="GhiChu" class="text-red-500"></span>
            </div>
            

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Create" class="w-full py-3 px-4 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" />
            </div>
        </form>

        <!-- Back to List -->
        <div class="mt-4 text-center">
            <a href="@Url.Action("Index")" class="text-blue-600 hover:text-blue-800">Quay lại danh sách</a>
        </div>
    </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
