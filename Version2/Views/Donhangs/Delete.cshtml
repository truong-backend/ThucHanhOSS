@model Version2.Models.Donhang



@{
    ViewData["Title"] = "Delete";
}

<div class="p-6 bg-white rounded shadow-lg">
    <h1 class="text-2xl font-bold text-gray-800 mb-4">Delete</h1>

    <h3 class="text-lg text-gray-700 mb-6">Are you sure you want to delete this?</h3>

    <div class="mb-6">
        <h4 class="text-lg font-semibold text-gray-800">Donhang</h4>
        <hr class="border-gray-300 my-2" />

        <dl class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <dt class="font-medium text-gray-600">Ngày Giao Hàng</dt>
            <dd class="text-gray-800 sm:col-span-2">@Html.DisplayFor(model => model.NgayGiaoHang)</dd>

            <dt class="font-medium text-gray-600">Trạng Thái</dt>
            <dd class="text-gray-800 sm:col-span-2">@Html.DisplayFor(model => model.TrangThai)</dd> 

            <dt class="font-medium text-gray-600">Ghi Chú</dt>
            <dd class="text-gray-800 sm:col-span-2">@Html.DisplayFor(model => model.GhiChu)</dd>

            <dt class="font-medium text-gray-600">Người Giao Hàng</dt>
            <dd class="text-gray-800 sm:col-span-2">@Html.DisplayFor(model => model.IdnguoiGiaoHangNavigation.TenNguoiGiaoHang)</dd>

            <dt class="font-medium text-gray-600">Phiếu Đặt Hàng</dt>
            <dd class="text-gray-800 sm:col-span-2">@Html.DisplayFor(model => model.IdphieuDatHangNavigation.IdphieuDatHang)</dd>
        </dl>
    </div>

    <form asp-action="Delete" class="flex items-center space-x-4">
        <input type="hidden" asp-for="IddonHang" />
        <button type="submit" class="px-4 py-2 bg-red-600 text-white font-medium rounded hover:bg-red-700 transition">
            Delete
        </button>
        <a asp-action="Index" class="px-4 py-2 bg-gray-300 text-gray-800 font-medium rounded hover:bg-gray-400 transition">
            Back to List
        </a>
    </form>
</div>
