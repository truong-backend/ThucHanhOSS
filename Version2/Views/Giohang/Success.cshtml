@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="text-center py-10">
    <h2 class="text-2xl font-bold text-green-600 mb-4">@ViewData["Title"]</h2>

    <p class="text-gray-700 mb-6">
        Cảm ơn bạn đã đặt hàng. Đơn hàng của bạn đang được xử lý.
    </p>

    <div class="space-x-4">
        <a asp-controller="Home" asp-action="Index"
           class="px-6 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition">
            Tiếp tục mua sắm
        </a>
        <a asp-controller="Giohang" asp-action="Index"
           class="px-6 py-2 bg-gray-500 text-white rounded hover:bg-gray-600 transition">
            Xem giỏ hàng
        </a>
    </div>
</div>
