@model Version2.Models.RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<h2 class="text-2xl font-semibold text-gray-800 mb-4">@ViewData["Title"]</h2>

<!-- Register Form -->
<div id="registerForm">
    <form asp-action="Register" method="post" class="bg-white p-6 rounded-lg shadow-lg max-w-md mx-auto">
        <div class="mb-4">
            <label for="TenDangNhap" class="block text-gray-700 font-medium mb-2">Tên đăng nhập</label>
            <input type="text" id="TenDangNhap" name="TenDangNhap" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500" required />
        </div>
        <div class="mb-4">
            <label for="MatKhau" class="block text-gray-700 font-medium mb-2">Mật khẩu</label>
            <input type="password" id="MatKhau" name="MatKhau" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500" required />
        </div>
        <div class="mb-4">
            <label for="TenKhachHang" class="block text-gray-700 font-medium mb-2">Tên khách hàng</label>
            <input type="text" id="TenKhachHang" name="TenKhachHang" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500" required />
        </div>
        <div class="mb-4">
            <label for="NgaySinh" class="block text-gray-700 font-medium mb-2">Ngày sinh</label>
            <input type="date" id="NgaySinh" name="NgaySinh" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500" />
        </div>
        <div class="mb-4">
            <label for="DiaChi" class="block text-gray-700 font-medium mb-2">Địa chỉ</label>
            <input type="text" id="DiaChi" name="DiaChi" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500" />
        </div>
        <div class="mb-4">
            <label for="SoDienThoai" class="block text-gray-700 font-medium mb-2">Số điện thoại</label>
            <input type="text" id="SoDienThoai" name="SoDienThoai" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500" />
        </div>
        <button type="submit" class="w-full bg-blue-600 text-white font-semibold py-2 rounded-lg hover:bg-blue-700 transition duration-200">Đăng ký</button>

        <!-- Login Link -->
        <div class="text-center mt-4">
            <a href="@Url.Action("Login", "Home")" class="text-indigo-600 hover:underline">Đã có tài khoản? Đăng nhập ngay</a>
        </div>
    </form>
</div>
