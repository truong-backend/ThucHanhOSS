@model Version2.Models.Nhaxuatban

@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h2 class="text-2xl font-bold mb-6 text-red-600">Xóa Tác Giả</h2>

<div class="bg-white p-6 rounded-lg shadow-md">
    <p class="text-gray-700 text-lg mb-4">
        Bạn có chắc chắn muốn xóa tác giả <strong>@Model.TenNhaXuatBan</strong> không?
    </p>


    <!-- Nút hành động -->
    <form asp-action="Delete" method="post" class="flex items-center space-x-4">
        <input type="hidden" asp-for="IdnhaXuatBan" />
        <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-600">
            Xóa
        </button>
        <a asp-action="Index" class="bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-600">
            Hủy
        </a>
    </form>
</div>

