@model Version2.Models.Nhaxuatban

@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h2 class="text-2xl font-bold mb-6">Cập nhật Tác Giả</h2>

<div class="bg-white p-6 rounded-lg shadow-md">
    <form asp-action="Edit" method="post" class="space-y-4">
        <input asp-for="IdnhaXuatBan" type="hidden" />
        <div>
            <label for="TenTacGia" class="block text-sm font-medium text-gray-700">Tên Tác Giả</label>
            <input asp-for="TenNhaXuatBan" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="TenNhaXuatBan" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label for="DiaChi" class="block text-sm font-medium text-gray-700">Địa chỉ</label>
            <input asp-for="DiaChi" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="DiaChi" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label for="SoDienThoai" class="block text-sm font-medium text-gray-700">Số Điện Thoại</label>
            <input asp-for="SoDienThoai" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="SoDienThoai" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label for="Email" class="block text-sm font-medium text-gray-700">Email</label>
            <input asp-for="Email" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Email" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label for="Website" class="block text-sm font-medium text-gray-700">Website</label>
            <input asp-for="Website" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Website" class="text-sm text-red-500"></span>
        </div>

        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-400 focus:outline-none focus:ring-2 focus:ring-blue-500">Cập Nhật Tác Giả</button>
        <a asp-action="Index" class="bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">Quay lại</a>
    </form>
</div>
