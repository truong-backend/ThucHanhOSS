@model Version2.Models.Sach

@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="min-h-screen bg-gradient-to-r from-blue-100 via-indigo-200 to-pink-200 flex items-center justify-center p-6">
    <div class="w-full max-w-4xl bg-white rounded-lg shadow-lg p-8 space-y-8">
        <!-- Title and Confirmation -->
        <h1 class="text-3xl font-semibold text-gray-800 mb-4 text-center">Delete Book</h1>
        <h3 class="text-xl text-gray-600 mb-6 text-center">Are you sure you want to delete this book?</h3>

        <!-- Book Details Section -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Book Image -->
            <div class="flex justify-center">
                <img src="@Url.Content(@Model.HinhAnh)" alt="Book Image" class="w-48 h-72 object-cover rounded-lg shadow-md">
            </div>

            <!-- Book Information -->
            <div>
                <dl class="space-y-4 text-gray-700">
                    <div class="flex justify-between">
                        <dt class="font-semibold">Book Title:</dt>
                        <dd>@Html.DisplayFor(model => model.TenSach)</dd>
                    </div>
                    <div class="flex justify-between">
                        <dt class="font-semibold">Publication Year:</dt>
                        <dd>@Html.DisplayFor(model => model.NamXuatBan)</dd>
                    </div>
                    <div class="flex justify-between">
                        <dt class="font-semibold">Pages:</dt>
                        <dd>@Html.DisplayFor(model => model.SoTrang)</dd>
                    </div>
                    <div class="flex justify-between">
                        <dt class="font-semibold">Price:</dt>
                        <dd>@Html.DisplayFor(model => model.Gia)</dd>
                    </div>
                    <div class="flex justify-between">
                        <dt class="font-semibold">Stock Quantity:</dt>
                        <dd>@Html.DisplayFor(model => model.SoLuongTon)</dd>
                    </div>
                    <div class="flex justify-between">
                        <dt class="font-semibold">Description:</dt>
                        <dd>@Html.DisplayFor(model => model.MoTa)</dd>
                    </div>
                    <div class="flex justify-between">
                        <dt class="font-semibold">ISBN:</dt>
                        <dd>@Html.DisplayFor(model => model.Isbn)</dd>
                    </div>
                    <div class="flex justify-between">
                        <dt class="font-semibold">Category:</dt>
                        <dd>@Html.DisplayFor(model => model.IddanhMucNavigation.TenDanhMuc)</dd>
                    </div>
                    <div class="flex justify-between">
                        <dt class="font-semibold">Publisher:</dt>
                        <dd>@Html.DisplayFor(model => model.IdnhaXuatBanNavigation.TenNhaXuatBan)</dd>
                    </div>
                </dl>
            </div>
        </div>

        <!-- Delete Action and Back Link -->
        <div class="mt-6 flex justify-between items-center">

            <!-- Back Button -->
            <a href="@Url.Action("Index")" class="text-blue-500 hover:text-blue-700 font-semibold">Cancel</a>

            <!-- Delete Confirmation Form -->
            <form asp-action="Delete" method="post" class="flex items-center space-x-4">
                <input type="hidden" asp-for="Idsach" />
                <button type="submit" class="bg-red-600 text-white font-semibold px-6 py-2 rounded-lg hover:bg-red-500 transition duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-red-400 focus:ring-opacity-50">
                    Delete
                </button>
            </form>
        </div>
    </div>
</div>
