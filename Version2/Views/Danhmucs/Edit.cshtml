@model Version2.Models.Danhmuc

@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h2 class="text-2xl font-bold mb-6">Cập nhật Tác Giả</h2>

<div class="bg-white p-6 rounded-lg shadow-md">
    <form asp-action="Edit" method="post" class="space-y-4">
        <!-- ID ẩn -->
        <input asp-for="IddanhMuc" type="hidden" />

        <!-- Họ và tên -->
        <div>
            <label class="block text-sm font-medium text-gray-700" for="TenDanhMuc">Tên Danh Mục</label>
            <input asp-for="TenDanhMuc" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="TenDanhMuc" class="text-sm text-red-500"></span>
        </div>

        <!-- Quốc tịch -->
        <div>
            <label class="block text-sm font-medium text-gray-700" for="MoTa">Mô Tả</label>
            <input asp-for="MoTa" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="MoTa" class="text-sm text-red-500"></span>
        </div>

        <!-- Nút hành động -->
        <div class="flex items-center space-x-4">
            <button type="submit" class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500">
                Cập nhật
            </button>
            <a asp-action="Index" class="bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">
                Hủy
            </a>
        </div>
    </form>
</div>
