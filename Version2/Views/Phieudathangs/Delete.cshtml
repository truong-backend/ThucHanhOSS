@model Version2.Models.Phieudathang

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-4xl font-extrabold text-center text-gray-900 mb-8">Xóa Phiếu Đặt Hàng</h1>

<h3 class="text-xl text-center text-gray-700 mb-6">Bạn có chắc chắn muốn xóa phiếu này?</h3>

<div class="max-w-3xl mx-auto bg-white p-8 rounded-lg shadow-xl">
    <h4 class="text-2xl font-semibold text-gray-800 mb-6">Thông Tin Phiếu Đặt Hàng</h4>
    <hr class="mb-6 border-t-2 border-gray-300" />

    <dl class="space-y-4">
        <div class="flex justify-between">
            <dt class="font-medium text-lg text-gray-600">Ngày lập hóa đơn:</dt>
            <dd class="text-lg text-gray-800">@Html.DisplayFor(model => model.NgayLapHoaDon)</dd>
        </div>
        <div class="flex justify-between">
            <dt class="font-medium text-lg text-gray-600">Trạng thái thanh toán:</dt>
            <dd class="text-lg text-gray-800">@Html.DisplayFor(model => model.TrangThaiThanhToan)</dd>
        </div>
        <div class="flex justify-between">
            <dt class="font-medium text-lg text-gray-600">Mã khách hàng:</dt>
            <dd class="text-lg text-gray-800">@Html.DisplayFor(model => model.IdkhachHangNavigation.IdkhachHang)</dd>
        </div>
    </dl>

    <div class="mt-8 flex justify-between items-center">
        <!-- Nút Xóa -->
        <form asp-action="Delete">
            <input type="hidden" asp-for="IdphieuDatHang" />
            <button type="submit" class="px-6 py-3 bg-red-600 text-white font-bold rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 transition duration-300">
                Xóa Phiếu
            </button>
        </form>

        <!-- Nút Quay lại danh sách -->
        <form action="@Url.Action("Index")" method="get">
            <button type="submit" class="px-6 py-3 bg-blue-600 text-white font-bold rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300">
                Quay lại danh sách
            </button>
        </form>
    </div>
</div>

