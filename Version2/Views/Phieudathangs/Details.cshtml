@model Version2.Models.Phieudathang

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-4xl font-extrabold text-center text-gray-900 mb-8">Chi Tiết Phiếu Đặt Hàng</h1>

<div class="max-w-3xl mx-auto bg-white p-8 rounded-lg shadow-lg">
    <h4 class="text-2xl font-semibold text-gray-800 mb-6">Thông Tin Phiếu Đặt Hàng</h4>
    <hr class="mb-6 border-t-2 border-gray-300" />

    <dl class="space-y-4">
        <div class="flex justify-between">
            <dt class="font-medium text-lg text-gray-600">Ngày Lập Hóa Đơn:</dt>
            <dd class="text-lg text-gray-800">@Html.DisplayFor(model => model.NgayLapHoaDon)</dd>
        </div>
        <div class="flex justify-between">
            <dt class="font-medium text-lg text-gray-600">Trạng Thái Thanh Toán:</dt>
            <dd class="text-lg text-gray-800">@Html.DisplayFor(model => model.TrangThaiThanhToan)</dd>
        </div>
        <div class="flex justify-between">
            <dt class="font-medium text-lg text-gray-600">Mã Khách Hàng:</dt>
            <dd class="text-lg text-gray-800">@Html.DisplayFor(model => model.IdkhachHangNavigation.IdkhachHang)</dd>
        </div>
    </dl>

    <div class="mt-8 flex justify-between items-center">
        <!-- Nút Chỉnh sửa -->
        <a href="@Url.Action("Edit", new { id = Model?.IdphieuDatHang })" class="px-6 py-3 bg-yellow-500 text-white font-bold rounded-md hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-yellow-400 transition duration-300">
            Chỉnh sửa
        </a>

        <!-- Nút Quay lại danh sách -->
        <a href="@Url.Action("Index")" class="px-6 py-3 bg-blue-600 text-white font-bold rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300">
            Quay lại danh sách
        </a>
    </div>
</div>